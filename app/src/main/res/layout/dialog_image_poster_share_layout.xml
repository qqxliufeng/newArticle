<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff">
    <LinearLayout
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/mTvImagePosterWX"
                style="@style/style_share_tv"
                android:drawableTop="@drawable/img_share_wx_icon"
                android:text="微信好友"/>

        <TextView
                android:id="@+id/mTvImagePosterCircle"
                style="@style/style_share_tv"
                android:drawableTop="@drawable/img_share_circle_icon"
                android:text="微信朋友圈"/>

        <TextView
                android:id="@+id/mTvImagePosterWB"
                style="@style/style_share_tv"
                android:drawableTop="@drawable/img_share_wb_icon"
                android:text="新浪微博"/>
    </LinearLayout>

    <TextView
            android:id="@+id/mTvAppShareCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_16" />

</LinearLayout>