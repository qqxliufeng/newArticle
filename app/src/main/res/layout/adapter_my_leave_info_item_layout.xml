<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:paddingLeft="@dimen/dp_10"
              android:paddingRight="@dimen/dp_10"
              android:paddingTop="@dimen/dp_10">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <ImageView android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_40"
                   android:id="@+id/mIvLeaveMessageItemUserFace"
                   android:src="@drawable/img_glide_circle_load_default"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="@color/blackTextColor"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="你给"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  tools:text="娟娟新月"
                  android:id="@+id/mTvLeaveMessageItemUserNickName"
                  android:textColor="@android:color/holo_blue_dark"
                  android:layout_marginLeft="@dimen/dp_10"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="@color/blackTextColor"
                  android:layout_marginLeft="@dimen/dp_10"
                  android:text="留言"/>

    </LinearLayout>

    <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/mCLLArticleReplyInfoItemReplyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackTextColor"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_10"
            android:background="#f5f6fa"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="@color/grayTextColor"
              tools:text="2018-11-7"
              android:id="@+id/mTvLeaveMessageItemTime"
              android:textSize="@dimen/sp_12"
              android:layout_marginTop="10dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/lineColor"
          android:layout_marginTop="@dimen/dp_10"/>

</LinearLayout>