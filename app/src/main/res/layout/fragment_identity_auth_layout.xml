<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="1、请上传您的身份证正面照片"
                  android:padding="@dimen/dp_10"
                  android:textColor="@color/blackTextColor"/>

        <ImageView
                android:id="@+id/mIvIdentityAuthZM"
                android:layout_width="match_parent" android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@drawable/img_glide_load_default"
                android:scaleType="center"/>

        <RelativeLayout
                android:id="@+id/mRlIdentityAuthZM"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/shape_ll_bg_2"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:padding="@dimen/dp_10">
            <TextView
                    android:id="@+id/mTvIdentityAuthZM"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/img_camera_icon2"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="上传"/>
        </RelativeLayout>

        <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="2、请上传身份证或认证一卡通，证件照片需清晰"
                android:padding="@dimen/dp_10"
                android:textColor="@color/blackTextColor"/>

        <ImageView
                android:id="@+id/mIvIdentityAuthFM"
                android:layout_width="match_parent" android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@drawable/img_glide_load_default"
                android:scaleType="center"/>

        <RelativeLayout
                android:id="@+id/mRlIdentityAuthFM"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/shape_ll_bg_2"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:padding="@dimen/dp_10">
            <TextView
                    android:id="@+id/mTvIdentityAuthFM"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/img_camera_icon2"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="上传"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/mLlIdentityAuthBottomContainer"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_10">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="示例图片"
                      android:padding="@dimen/dp_10"
                      android:textColor="@color/blackTextColor"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:textColor="@color/blackTextColor"
                          android:drawablePadding="@dimen/dp_10"
                          android:drawableTop="@drawable/img_auth_sl1_icon"
                          android:text="身份证"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:drawableTop="@drawable/img_auth_sl2_icon"
                          android:gravity="center"
                          android:textColor="@color/blackTextColor"
                          android:drawablePadding="@dimen/dp_10"
                          android:text="认证一卡通"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>