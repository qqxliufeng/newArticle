<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_ll_bg_1"
    android:orientation="vertical">


    <EditText
        android:id="@+id/mEtPersonalEditNickNameDialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/img_write_article_icon"
        android:drawablePadding="@dimen/dp_10"
        android:hint="编辑新昵称"
        android:maxLength="16"
        android:textColor="@color/normalTextColor"
        android:textColorHint="@color/grayTextColor"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mBtPersonalEditNickNameDialogCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <Button
            android:id="@+id/mBtPersonalEditNickNameDialogSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="保存"
            android:textColor="@color/colorAccent" />
    </LinearLayout>


</LinearLayout>