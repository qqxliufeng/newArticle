<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <android.support.design.widget.TabLayout
            android:id="@+id/mTlIndexBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabIndicatorHeight="2dp"
            app:tabMode="scrollable"
            app:tabPadding="@dimen/dp_10"
            android:layout_marginRight="60dp"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextAppearance="@style/IndexBottomTabLayoutAppearance"
            app:tabTextColor="#000000" />

        <ImageView
            android:id="@+id/mIvBottomIndexSearch"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:padding="@dimen/dp_10"
            android:src="@drawable/img_search_icon" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mVpIndexBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>