<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_ll_bg_1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="添加链接"
        android:textColor="@color/blackTextColor"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/mEtAddLinkDialogName"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/img_write_article_icon"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请输入链接名称"
        android:inputType="textWebEditText"
        android:textColor="@color/blackTextColor"
        android:textColorHint="@color/normalTextColor"
        android:textSize="@dimen/sp_14" />

    <EditText
        android:id="@+id/mEtAddLinkDialogAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/img_write_article_icon"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请输入链接地址"
        android:textColor="@color/normalTextColor"
        android:textColorHint="@color/normalTextColor"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mBtAddLinkDialogCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <Button
            android:id="@+id/mBtAddLinkDialogSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="确定"
            android:textColor="@color/colorAccent" />
    </LinearLayout>


</LinearLayout>