<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ArticleEditMenuTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
    </style>

    <style name="ActionMenuTextAppearance">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="IndexBottomTabLayoutAppearance" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="style_mine_action">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_mine_action_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/img_gray_inter_icon</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="style_share_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="BottomSheetEdit" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowIsFloating">false</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="style_ctv_admire">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:background">@drawable/select_article_admire_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_ctv_admire</item>
    </style>

    <!--JPUSH-->
    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_mobilenumber">
        <item name="android:hint">@string/mobilenumber_hint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
